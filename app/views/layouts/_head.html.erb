<head>
    <%= render 'layouts/meta_tags' %>

    <!-- CSRF meta tags - Rails security -->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--load your compiled CSS -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload", nonce: content_security_policy_nonce %>
    
    <%# Google Fonts Monserrat & Playfair Display SC added %>
    <link rel="preconnect" href="https://fonts.googleapis.com" async>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;600&family=Playfair+Display+SC:wght@400;700&display=swap" rel="stylesheet" async>

    <!--load external fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" nonce="<%= content_security_policy_nonce %>">

    <!--load contact form - must be loaded before application.js to preserve global fetch -->
    <script async src="https://tally.so/widgets/embed.js" nonce="<%= content_security_policy_nonce %>"></script>
    
    <!--load your compiled javascript -->
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true, nonce: content_security_policy_nonce %>
</head>