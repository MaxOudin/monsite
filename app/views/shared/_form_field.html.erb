<div class="mb-4">
  <%= form.label field, class: "block text-sm font-medium text-gray-700 mb-2" %>
  <% case field_type %>
  <% when :text_area %>
    <%= form.text_area field, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", rows: 5 %>
  <% when :date_field %>
    <%= form.date_field field, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  <% when :color_field %>
    <div class="flex items-center gap-3">
      <%= form.color_field field, class: "h-10 w-20 border border-gray-300 rounded-lg cursor-pointer" %>
      <%= form.text_field field, class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "#000000" %>
    </div>
  <% when :select %>
    <%= form.select field, options, { include_blank: "SÃ©lectionner..." }, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white" %>
  <% else %>
    <%= form.text_field field, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  <% end %>
  <% if object.errors[field].any? %>
    <div class="mt-1 text-sm text-red-600">
      <%= object.errors[field].join(", ") %>
    </div>
  <% end %>
</div>
