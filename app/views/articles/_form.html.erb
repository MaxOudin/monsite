<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 md:py-8">
  <%= form_with(model: article, data: { turbo: false }, local: true) do |f| %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
      <!-- Colonne principale -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Informations principales -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 md:p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4 md:mb-6">Informations principales</h3>

          <%= render 'shared/form_field', form: f, field: :titre, field_type: :text_field, object: article %>
          <%= render 'shared/form_field', form: f, field: :theme, field_type: :select, options: Article::THEMES_WITH_COLORS.keys, object: article %>

          <div class="mb-4">
            <%= f.label :content, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="trix-wrapper border border-gray-300 rounded-lg overflow-hidden bg-white">
              <%= f.rich_text_area :content, class: "trix-content" %>
            </div>
            <% if article.errors[:content].any? %>
              <div class="mt-1 text-sm text-red-600">
                <%= article.errors[:content].join(", ") %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Image -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 md:p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Image</h3>

          <div class="mb-4">
            <% if article.image_url.present? %>
              <img src="<%= article.image_url %>" alt="<%= article.image_alt %>" class="w-full h-48 object-cover rounded-lg">
            <% else %>
              <div class="w-full h-48 bg-gray-100 rounded-lg flex items-center justify-center">
                <p class="text-sm text-gray-500">Aucune image</p>
              </div>
            <% end %>
          </div>

          <%= render 'shared/form_field', form: f, field: :image_url, field_type: :text_field, object: article %>
          <%= render 'shared/form_field', form: f, field: :image_alt, field_type: :text_field, object: article %>
        </div>

        <!-- Couleur -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 md:p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Couleur</h3>
          <div class="mb-4">
            <div class="flex items-center gap-3 mb-2">
              <div class="w-12 h-12 rounded-lg border-2 border-gray-200" style="background-color: <%= article.couleur_du_theme %>"></div>
              <p class="text-sm text-gray-600">Couleur automatique basée sur le thème</p>
            </div>
          </div>
          <%= render 'shared/form_field', form: f, field: :couleur, field_type: :color_field, object: article %>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="mt-6 md:mt-8 flex flex-col sm:flex-row justify-between gap-4">
      <%= link_to 'Annuler', articles_path, class: "w-full sm:w-auto px-6 py-2 text-center border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors font-medium" %>
      <%= f.submit article.persisted? ? 'Mettre à jour' : 'Créer', class: "w-full sm:w-auto px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>
