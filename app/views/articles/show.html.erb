<%= render 'shared/navbar' %>


  <% if user_signed_in? %>
      <%= link_to 'Modifier', edit_article_path(@article) %>
  <% end %>

<div class="project-container">
  <div class="card-pastille pastille-show" style="background-color:<%= @article.couleur_du_theme %>;"><%= @article.theme %></div>
  <h2> <%= @article.titre.upcase %> </h2>

  <div class="image-container" style="border: 1px solid <%= @article.couleur %>;">
    <img src="<%= @article.image_url %>" alt="<%= @article.image_alt %>" class="project-image">
  </div>

  <div class="article-container">
    <br>

    <p class="description-paragraphe"><%= @article.content %></p>
  </div>

  <p style="opacity:0.7;"> Article publi√© le <%= @article.created_at.strftime("%d/%m/%Y") %></p>
  <div class="return-button-container">
    <a href="/articles" class="btn retour-accueil-btn">Retour aux articles</a>
  </div>
</div>
