<% content_for :meta_product_name, "Articles - #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_title, "Articles - #{DEFAULT_META["meta_title"]}" %>
<% content_for :meta_description, "Découvrez mes articles sur le développement web et mes expériences" %>
<% content_for :meta_image, DEFAULT_META["meta_image"] %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- En-tête -->
  <div class="flex flex-col sm:flex-row justify-between items-center mb-12 gap-4">
    <div>
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900">Mes Articles</h1>
      <p class="mt-2 text-lg text-gray-600">Découvrez mes articles sur le développement web et mes expériences</p>
    </div>
    <% if user_signed_in? %>
      <%= link_to new_article_path, 
          class: "inline-flex items-center px-6 py-3 rounded-xl text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-500 hover:to-indigo-500 transition-all duration-200 shadow-md hover:shadow-lg transform hover:scale-105" do %>
        <i class="fas fa-plus mr-2"></i>
        <span>Nouvel Article</span>
      <% end %>
    <% end %>
  </div>

  <!-- Barre de recherche -->
  <div class="mb-8">
    <%= form_with url: articles_path, method: :get, class: "flex gap-2" do |f| %>
      <div class="flex-1 relative">
        <%= text_field_tag :query,
              params[:query],
              class: "w-full px-4 py-3 pl-10 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all",
              placeholder: "Rechercher un article..."
          %>
        <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
      </div>
      <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
        Rechercher
      </button>
      <% if params[:query].present? %>
        <%= link_to articles_path, class: "px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" do %>
          Effacer
        <% end %>
      <% end %>
    <% end %>
  </div>

  <!-- Résultats de recherche -->
  <% if params[:query].present? %>
    <div class="mb-6 p-4 bg-blue-50 rounded-lg border border-blue-100">
      <p class="text-sm text-blue-800">
        <% if @articles.any? %>
          <strong><%= @articles.count %></strong> résultat<%= @articles.count > 1 ? 's' : '' %> pour "<%= params[:query] %>"
        <% else %>
          Aucun résultat pour "<%= params[:query] %>"
        <% end %>
      </p>
    </div>
  <% end %>

  <!-- Grille d'articles -->
  <% if @articles.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @articles.each do |article| %>
        <%= link_to article_path(article), class: "group" do %>
          <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-blue-100">
            <!-- Image de l'article -->
            <% if article.image_url.present? && valid_url_or_asset?(article.image_url) %>
              <div class="aspect-w-16 aspect-h-9 overflow-hidden bg-gray-100">
                <img src="<%= article.image_url %>" 
                     alt="<%= article.image_alt %>"
                     class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-300">
              </div>
            <% else %>
              <div class="aspect-w-16 aspect-h-9 bg-gray-100 flex items-center justify-center">
                <i class="fas fa-image text-4xl text-gray-400"></i>
              </div>
            <% end %>

            <!-- Contenu de la carte -->
            <div class="p-6">
              <!-- Badge thème -->
              <div class="mb-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium" 
                      style="background-color: <%= article.couleur_du_theme %>20; color: <%= article.couleur_du_theme %>; border: 1px solid <%= article.couleur_du_theme %>30;">
                  <%= article.theme %>
                </span>
              </div>

              <!-- Titre et description -->
              <h2 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors duration-200">
                <%= article.titre %>
              </h2>
              <p class="text-gray-600 text-sm line-clamp-2">
                <%= truncate(article.content.to_plain_text, length: 120) %>
              </p>

              <!-- Footer de la carte -->
              <div class="mt-4 pt-4 border-t border-gray-100 flex justify-between items-center">
                <div class="text-sm text-gray-500">
                  <%= article.created_at.strftime("%d %B %Y") %>
                </div>
                <div class="flex items-center text-blue-600">
                  <span class="text-sm font-medium mr-2">Lire l'article</span>
                  <i class="fas fa-arrow-right transform group-hover:translate-x-1 transition-transform duration-200"></i>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Message si aucun article -->
    <div class="text-center py-12">
      <div class="text-gray-400 mb-4">
        <i class="fas fa-newspaper text-6xl"></i>
      </div>
      <h3 class="text-xl font-medium text-gray-900 mb-2">
        <% if params[:query].present? %>
          Aucun article trouvé
        <% else %>
          Aucun article pour le moment
        <% end %>
      </h3>
      <p class="text-gray-600">
        <% if params[:query].present? %>
          Essayez avec d'autres mots-clés.
        <% else %>
          Les articles que vous créez apparaîtront ici.
        <% end %>
      </p>
    </div>
  <% end %>
</div>
