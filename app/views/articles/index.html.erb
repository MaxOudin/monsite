<% content_for :meta_product_name, "Articles - #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_title, "Articles - #{DEFAULT_META["meta_title"]}" %>
<% content_for :meta_description, "Découvrez mes articles sur le développement web et mes expériences" %>
<% content_for :meta_image, DEFAULT_META["meta_image"] %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- En-tête -->
  <div class="flex flex-col sm:flex-row justify-between items-center mb-12 gap-4">
    <div>
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900">Mes Articles</h1>
      <p class="mt-2 text-lg text-gray-600">Découvrez mes articles sur le développement web et mes expériences</p>
    </div>
    <% if user_signed_in? %>
      <%= link_to new_article_path, 
          class: "inline-flex items-center px-6 py-3 rounded-xl text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-500 hover:to-indigo-500 transition-all duration-200 shadow-md hover:shadow-lg transform hover:scale-105" do %>
        <i class="fas fa-plus mr-2"></i>
        <span>Nouvel Article</span>
      <% end %>
    <% end %>
  </div>

  <!-- Barre de recherche -->
  <div class="mb-8">
    <%= form_with url: articles_path, method: :get, class: "flex gap-2" do |f| %>
      <div class="flex-1 relative">
        <%= text_field_tag :query,
              params[:query],
              class: "w-full px-4 py-3 pl-10 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all",
              placeholder: "Rechercher un article..."
          %>
        <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
      </div>
      <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
        Rechercher
      </button>
      <% if params[:query].present? %>
        <%= link_to articles_path, class: "px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" do %>
          Effacer
        <% end %>
      <% end %>
    <% end %>
  </div>

  <!-- Résultats de recherche -->
  <% if params[:query].present? %>
    <div class="mb-6 p-4 bg-blue-50 rounded-lg border border-blue-100">
      <p class="text-sm text-blue-800">
        <% if @articles.any? %>
          <strong><%= @articles.count %></strong> résultat<%= @articles.count > 1 ? 's' : '' %> pour "<%= params[:query] %>"
        <% else %>
          Aucun résultat pour "<%= params[:query] %>"
        <% end %>
      </p>
    </div>
  <% end %>

  <!-- Grille d'articles -->
  <% if @articles.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 md:gap-4">
      <% @articles.each do |article| %>
        <% 
          # Déterminer l'image de fond (image de l'article ou logo par défaut)
          background_image = article.image_url.present? && valid_url_or_asset?(article.image_url) ? article.image_url : image_path('assets/images/yellow_logo.svg')
          # Couleur uniforme pour toutes les cartes depuis la configuration
          overlay_color = DEFAULT_META['card_overlay_color']
        %>
        <%= link_to article_path(article), class: "group h-full flex" do %>
          <div class="relative w-full h-80 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1">
            <!-- Image de fond -->
            <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" 
                 style="background-image: url('<%= background_image %>');">
            </div>
            
            <!-- Overlay de couleur qui s'enlève au hover -->
            <div class="absolute inset-0 opacity-50 transition-opacity duration-500 group-hover:opacity-0" 
                 style="background-color: <%= overlay_color %>;">
            </div>
            
            <!-- Contenu par-dessus -->
            <div class="relative h-full flex flex-col justify-between p-6 text-white">
              <!-- En-tête avec date et thème -->
              <div class="flex-shrink-0 flex justify-between items-start">
                <!-- Date en haut à gauche -->
                <span class="text-xs font-medium uppercase tracking-wider" 
                      style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5), 0 0 8px rgba(0, 0, 0, 0.2);">
                  <%= article.created_at.strftime("%d %b %Y") %>
                </span>
                
                <!-- Badge thème en haut à droite -->
                <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold backdrop-blur-sm shadow-lg" 
                      style="background-color: rgba(255, 255, 255, 0.25); color: white; border: 1px solid rgba(255,255,255,0.3); text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5), 0 0 8px rgba(0, 0, 0, 0.2);">
                  <%= article.theme %>
                </span>
              </div>
              
              <!-- Titre en bas -->
              <div class="flex-shrink-0">
                <h2 class="text-xl md:text-2xl font-bold leading-tight" 
                    style="text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.7), 0 0 8px rgba(0, 0, 0, 0.5);">
                  <%= article.titre %>
                </h2>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Message si aucun article -->
    <div class="text-center py-12">
      <div class="text-gray-400 mb-4">
        <i class="fas fa-newspaper text-6xl"></i>
      </div>
      <h3 class="text-xl font-medium text-gray-900 mb-2">
        <% if params[:query].present? %>
          Aucun article trouvé
        <% else %>
          Aucun article pour le moment
        <% end %>
      </h3>
      <p class="text-gray-600">
        <% if params[:query].present? %>
          Essayez avec d'autres mots-clés.
        <% else %>
          Les articles que vous créez apparaîtront ici.
        <% end %>
      </p>
    </div>
  <% end %>
</div>
