<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 md:py-8">
  <%= form_with(model: projet, local: true) do |f| %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
      <!-- Colonne principale -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Informations principales -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 md:p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4 md:mb-6">Informations principales</h3>

          <%= render 'shared/form_field', form: f, field: :titre, field_type: :text_field, object: projet %>
          <%= render 'shared/form_field', form: f, field: :type_projet, field_type: :select, options: Projet::TYPE_PROJET, object: projet %>
          
          <div class="mb-4">
            <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_area :description, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", rows: 10 %>
            <% if projet.errors[:description].any? %>
              <div class="mt-1 text-sm text-red-600">
                <%= projet.errors[:description].join(", ") %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Liens et références -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 md:p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4 md:mb-6">Liens et références</h3>

          <%= render 'shared/form_field', form: f, field: :projet_lien, field_type: :text_field, object: projet %>
          <%= render 'shared/form_field', form: f, field: :github_lien, field_type: :text_field, object: projet %>
          <%= render 'shared/form_field', form: f, field: :client, field_type: :text_field, object: projet %>
        </div>

        <!-- Outils utilisés -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 md:p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4 md:mb-6">Outils utilisés</h3>

          <div class="mb-4">
            <%= f.label :outil_ids, "Sélectionner les outils", class: "block text-sm font-medium text-gray-700 mb-3" %>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3 md:gap-4">
              <%= f.collection_check_boxes :outil_ids, @outils, :id, :nom do |b| %>
                <label class="flex flex-col items-center p-3 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 hover:bg-blue-50 transition-colors <%= 'border-blue-500 bg-blue-50' if projet.outils.include?(b.object) %>">
                  <% if b.object.icone_url.present? %>
                    <img src="<%= b.object.icone_url %>" alt="<%= b.object.icone_url_alt.present? ? b.object.icone_url_alt : b.object.nom %>" class="w-8 h-8 mb-2 object-contain">
                  <% end %>
                  <%= b.check_box(class: "sr-only", checked: projet.outils.include?(b.object)) %>
                  <span class="text-xs text-center text-gray-700 font-medium"><%= b.label %></span>
                </label>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Image -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 md:p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Image</h3>

          <div class="mb-4">
            <% if projet.image_url.present? %>
              <img src="<%= projet.image_url %>" alt="<%= projet.image_url_alt %>" class="w-full h-48 object-cover rounded-lg">
            <% else %>
              <div class="w-full h-48 bg-gray-100 rounded-lg flex items-center justify-center">
                <p class="text-sm text-gray-500">Aucune image</p>
              </div>
            <% end %>
          </div>

          <%= render 'shared/form_field', form: f, field: :image_url, field_type: :text_field, object: projet %>
          <%= render 'shared/form_field', form: f, field: :image_url_alt, field_type: :text_field, object: projet %>
        </div>

        <!-- Dates et couleur -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 md:p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Dates et couleur</h3>

          <%= render 'shared/form_field', form: f, field: :date_debut, field_type: :date_field, object: projet %>
          <%= render 'shared/form_field', form: f, field: :date_fin, field_type: :date_field, object: projet %>
          <%= render 'shared/form_field', form: f, field: :couleur, field_type: :color_field, object: projet %>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="mt-6 md:mt-8 flex flex-col sm:flex-row justify-between gap-4">
      <%= link_to 'Annuler', projets_path, class: "w-full sm:w-auto px-6 py-2 text-center border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors font-medium" %>
      <%= f.submit projet.persisted? ? 'Mettre à jour' : 'Créer', class: "w-full sm:w-auto px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>
