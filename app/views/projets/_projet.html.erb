<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- En-tête du projet -->
  <div class="mb-8 relative">
    <!-- Bouton Modifier (positionné en haut à droite) -->
    <% if user_signed_in? %>
      <div class="absolute top-0 right-0">
        <%= link_to "Modifier", edit_projet_path(@projet), class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" %>
      </div>
    <% end %>
    
    <!-- Contenu centré -->
    <div class="flex flex-col items-center text-center">
    <% text_size = @projet.titre.size > 15 ? "text-xl" : "text-4xl" %>
      <h1 class="<%= text_size %> font-bold text-gray-900"><%= @projet.titre %></h1>
      
      <!-- Date -->
      <% if @projet.date_debut.present? %>
        <div class="mt-4">
          <span class="text-gray-700 text-sm md:text-base font-medium">
            <%= @projet.date_debut.strftime("%B %Y") %> - <%= @projet.date_fin.present? ? @projet.date_fin.strftime("%B %Y") : "En cours" %>
          </span>
        </div>
      <% end %>
      
      <!-- Badge type de projet -->
      <div class="mt-3">
        <span class="inline-flex items-center px-4 py-2 rounded-lg text-sm md:text-base font-semibold w-fit" 
              style="background-color: <%= @projet.couleur.present? ? @projet.couleur : "#004AAD" %>; color: #ffffff;">
          <%= @projet.type_projet.titleize %>
        </span>
      </div>
    </div>
  </div>

  <!-- Image principale -->
  <% if @projet.image_url.present? && valid_url_or_asset?(@projet.image_url) %>
    <div class="mb-8 rounded-2xl overflow-hidden shadow-lg">
      <img src="<%= @projet.image_url %>" 
           alt="<%= @projet.image_url_alt.present? ? @projet.image_url_alt : @projet.titre %>" 
           class="w-full md:h-[400px] object-cover"
           loading="lazy">
    </div>
  <% end %>

  <!-- Contenu principal -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Colonne principale -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Description -->
      <% if @projet.description.present? %>
        <section class="prose prose-sm max-w-none">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">À propos du projet</h2>
          <div class="mt-4 text-gray-600 leading-relaxed text-sm">
            <%= simple_format(@projet.description) %>
          </div>
        </section>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-8">
        <!-- Client -->
        <% if @projet.client.present? %>
          <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-500">Client</h3>
            <p class="mt-2 text-base text-gray-900"><%= @projet.client %></p>
          </div>
        <% end %>

        <!-- Liens -->
        <div class="space-y-4">
          <% if @projet.projet_lien.present? %>
            <a href="<%= @projet.projet_lien %>" target="_blank" rel="noopener" 
               class="flex items-center gap-2 px-4 py-2 w-full bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50 transition-colors">
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
              </svg>
              <span class="text-gray-700">Voir le projet</span>
            </a>
          <% end %>

          <% if @projet.github_lien.present? %>
            <a href="<%= @projet.github_lien %>" target="_blank" rel="noopener" 
               class="flex items-center gap-2 px-4 py-2 w-full bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50 transition-colors">
              <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
              </svg>
              <span class="text-gray-700">Code source</span>
            </a>
          <% end %>
        </div>

        <!-- Technologies utilisées -->
        <% if @projet.outils.any? %>
          <div class="mt-6 pt-6 border-t border-gray-200">
            <h3 class="text-sm font-medium text-gray-500 mb-4">Technologies utilisées</h3>
            <div class="space-y-3">
              <% @projet.outils.each do |outil| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div class="flex items-center gap-3">
                    <% if outil.icone_url.present? %>
                      <img src="<%= outil.icone_url %>" 
                           alt="<%= outil.icone_url_alt.present? ? outil.icone_url_alt : outil.nom %>" 
                           class="w-6 h-6 object-contain">
                    <% end %>
                    <div>
                      <span class="text-sm font-medium text-gray-900">
                        <%= outil.nom %>
                      </span>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

