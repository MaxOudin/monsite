<% content_for :meta_title, "Développeur Web Indépendant à Bordeaux | Maxime Oudin" %>
<% content_for :meta_description, "Expert en développement web Ruby on Rails et JavaScript. Création d'applications web performantes et sur mesure à Bordeaux. Découvrez mes services de développement web." %>

<main class="hero-section" role="main">
  <div class="hero-background-pattern" aria-hidden="true"></div>
  <div class="container hero-content">
    <div class="hero-left">
      <div class="hero-intro">
        <span class="hero-greeting">Bonjour, je suis</span>
        <h1>Maxime Oudin</h1>
        <div class="hero-title">
          <div class="title-badge">
            <%= image_tag "yellow_logo.svg", class: "hero-logo", alt: "Logo Maxime Oudin - Développeur Web Bordeaux", width: "32", height: "32" %>
            <span>Développeur Web Indépendant</span>
          </div>
        </div>
      </div>

      <p class="hero-description">
        Je crée des <span class="highlight">applications web sur mesure</span> avec une approche centrée sur l'expérience utilisateur et les performances. Basé à <span class="highlight-secondary">Bordeaux</span>, je travaille avec des clients dans toute la France.
      </p>

      <nav class="hero-cta-left" aria-label="Navigation principale">
        <%= link_to projets_path, class: "btn btn-outline", title: "Découvrir mes projets de développement web" do %>
          <i class="fas fa-code-branch" aria-hidden="true"></i>
          <span>Mes projets</span>
        <% end %>
        <%= link_to articles_path, class: "btn btn-outline", title: "Lire mes articles sur le développement web" do %>
          <i class="fas fa-newspaper" aria-hidden="true"></i>
          <span>Mes articles</span>
        <% end %>
      </nav>
    </div>

    <aside class="hero-right">
      <section class="tech-stack" aria-labelledby="tech-stack-title">
        <h2 id="tech-stack-title" class="tech-title">Technologies principales</h2>
        <div class="tech-grid">
          <% [
            { name: "Ruby", desc: "Langage de programmation principal" },
            { name: "Rails", desc: "Framework web Ruby on Rails" },
            { name: "JavaScript", desc: "Programmation côté client" },
            { name: "PostgreSQL", desc: "Base de données relationnelle" },
            { name: "Heroku", desc: "Plateforme de déploiement" },
            { name: "GitHub", desc: "Gestion de versions" }
          ].each do |tech| %>
            <div class="tech-item">
              <%= image_tag "tech_logos/#{tech[:name].downcase}.svg",
                          class: "tech-logo",
                          alt: "Logo #{tech[:name]}",
                          title: tech[:desc],
                          width: "48",
                          height: "48" %>
              <span class="tech-name"><%= tech[:name] %></span>
            </div>
          <% end %>
        </div>
      </section>
      <div class="hero-cta-right">
        <a href="#contact-infos"
           class="btn btn-primary btn-cta"
           data-tally-open="mB7p75"
           data-tally-hide-title="1"
           data-tally-overlay="1"
           title="Contactez-moi pour votre projet web">
          <i class="fa-solid fa-envelope"></i>
          <span>Me contacter</span>
        </a>
      </div>
    </aside>
  </div>
</main>
