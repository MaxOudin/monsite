<div class="my-[5vh] mx-auto w-[90%] max-w-[800px] flex flex-col items-center px-5 md:w-[95%] md:px-4">
  <h2 class="text-2xl font-bold mb-6 text-[#141414]">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full flex flex-col items-start", method: :post, data: { turbo: false } }) do |f| %>
    <div class="w-full mb-6">
      <%= f.label :email, class: "block text-sm font-medium text-[#141414] mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          class: "w-full rounded-md border border-gray-300 px-3 py-2 transition-all duration-150 focus:border-blue-400 focus:ring-4 focus:ring-blue-100 focus:outline-none" %>
    </div>

    <div class="w-full mb-6">
      <%= f.label :password, class: "block text-sm font-medium text-[#141414] mb-2" %><br />
      <%= f.password_field :password, autocomplete: "current-password", 
          class: "w-full rounded-md border border-gray-300 px-3 py-2 transition-all duration-150 focus:border-blue-400 focus:ring-4 focus:ring-blue-100 focus:outline-none" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="w-full mb-6 flex items-center">
        <%= f.check_box :remember_me, class: "mr-2 h-4 w-4 text-[#004AAD] focus:ring-[#004AAD] border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "text-sm text-[#141414]" %>
      </div>
    <% end %>

    <div class="w-full mt-6">
      <%= f.submit "Log in", 
          type: "submit",
          formmethod: "post",
          class: "inline-flex items-center justify-center px-6 py-3 bg-[#FFDD00] text-[#004AAD] rounded-lg font-medium text-base cursor-pointer pointer-events-auto transition-all duration-300 hover:bg-[#FFE633] hover:-translate-y-0.5 hover:shadow-md active:translate-y-0 active:shadow-sm shadow-sm border-none outline-none relative z-10" %>
    </div>
  <% end %>

  <div class="w-full mt-6">
    <%= render "devise/shared/links" %>
  </div>
</div>
